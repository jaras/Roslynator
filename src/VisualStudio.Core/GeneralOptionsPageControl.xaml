<UserControl x:Class="Roslynator.VisualStudio.GeneralOptionsPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Roslynator.VisualStudio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <Style TargetType="{x:Type CheckBox}">
      <Setter Property="Margin" Value="0,5,0,0" />
    </Style>
  </UserControl.Resources>
  <Grid>
    <StackPanel Orientation="Vertical" Margin="0,15,0,0">
      <CheckBox IsChecked="{Binding PrefixFieldIdentifierWithUnderscore}">Prefix field identifier with underscore</CheckBox>
      <CheckBox IsChecked="{Binding UseConfigFile}">Use config file</CheckBox>
    </StackPanel>
  </Grid>
</UserControl>
